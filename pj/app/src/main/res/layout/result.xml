<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" 이전순위 " />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" 다음순위 " />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        //1순위 화면
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //이미지+"1순위"+이미지 부분
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/first_rank1"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="1순위"
                    android:textSize="40dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/first_rank2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            //ratingBar 부분
            <RatingBar
                android:id="@+id/first_rbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:stepSize="1"
                android:numStars="5">
            </RatingBar>

            //책이미지와 제목 표기 부분
            <ImageView
                android:id="@+id/first_cover"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="280dp"
                android:layout_height="330dp"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow>
                    <TextView
                        android:id="@+id/first_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="23dp"
                        android:text="1순위 도서 제목"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/first_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="1순위 도서 지은이" />

                </TableRow>

            </TableLayout>


        </LinearLayout>

        //2순위 화면
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //이미지+"2순위"+이미지 부분
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/second_rank1"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="2순위"
                    android:textSize="40dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/second_rank2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            //ratingBar 부분
            <RatingBar
                android:id="@+id/second_rbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:stepSize="1"
                android:numStars="5">
            </RatingBar>

            //책이미지와 제목 표기 부분
            <ImageView
                android:id="@+id/second_cover"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="280dp"
                android:layout_height="330dp"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow>
                    <TextView
                        android:id="@+id/second_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="23dp"
                        android:text="2순위 도서 제목"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/second_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:text="2순위 도서 지은이" />

                </TableRow>

            </TableLayout>


        </LinearLayout>

        //3순위 화면
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //이미지+"3순위"+이미지 부분
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/third_rank1"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="85dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="3순위"
                    android:textSize="40dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/third_rank2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            //ratingBar 부분
            <RatingBar
                android:id="@+id/third_rbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:stepSize="1"
                android:numStars="5">
            </RatingBar>

            //책이미지와 제목 표기 부분
            //3순위의 첫번째 책
            <LinearLayout
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/third_cover1"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_width="150dp"
                    android:layout_height="200dp"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow>
                        <TextView
                            android:id="@+id/third_title1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="23dp"
                            android:text="3순위 도서 제목1"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/third_author1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="15dp"
                            android:text="3순위 도서 지은이1" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

            //3순위의 두번째 책
            <LinearLayout
                android:layout_width="406dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/third_cover2"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_width="150dp"
                    android:layout_height="200dp"/>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TableRow>
                        <TextView
                            android:id="@+id/third_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="23dp"
                            android:text="3순위 도서 제목2"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/third_author2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="15dp"
                            android:text="3순위 도서 지은이2" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </LinearLayout>

        //4순위 화면
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            //"4순위" 부분
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="4순위"
                android:layout_gravity="center"
                android:textSize="40dp"
                android:textStyle="bold"/>

            //ratingBar 부분
            <RatingBar
                android:id="@+id/fourth_rbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:stepSize="1"
                android:numStars="5">
            </RatingBar>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //책이미지와 제목 표기 부분
                    //4순위의 첫번째 책

                    <LinearLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fourth_cover1"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="20dp" />

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_title1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:text="4순위 도서 제목1"
                                    android:textSize="23dp"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_author1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="4순위 도서 지은이1"
                                    android:textSize="15dp" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    //4순위의 두번째 책

                    <LinearLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fourth_cover2"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="20dp" />

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_title2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:text="4순위 도서 제목2"
                                    android:textSize="23dp"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_author2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="4순위 도서 지은이2"
                                    android:textSize="15dp" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    //4순위의 세번째 책

                    <LinearLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fourth_cover3"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="20dp" />

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_title3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:text="4순위 도서 제목3"
                                    android:textSize="23dp"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_author3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="4순위 도서 지은이3"
                                    android:textSize="15dp" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    //4순위의 네번째 책

                    <LinearLayout
                        android:layout_width="406dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fourth_cover4"
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="20dp" />

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_title4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:text="4순위 도서 제목4"
                                    android:textSize="23dp"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:id="@+id/fourth_author4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:text="4순위 도서 4"
                                    android:textSize="15dp" />

                            </TableRow>
                        </TableLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </ViewFlipper>
</LinearLayout>